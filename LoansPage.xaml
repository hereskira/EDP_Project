<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EDP_Project.Models"
             x:Class="EDP_Project.LoansPage"
             Title="Loans">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Library Management System"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Authors" Clicked="OnAuthorsClicked" />
                <Button Text="Books" Clicked="OnBooksClicked" />
                <Button Text="Categories" Clicked="OnCategoriesClicked" />
                <Button Text="Employees" Clicked="OnEmployeesClicked" />
                <Button Text="Loans" Clicked="OnLoansClicked" />
                <Button Text="Members" Clicked="OnMembersClicked" />
                <Button Text="Publishers" Clicked="OnPublishersClicked" />
            </HorizontalStackLayout>

            <Label Text="Loans List" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   Margin="0,20,0,10"/>
            
            <Label x:Name="LoanCountLabel" 
                   Text="Loans: 0" 
                   FontSize="16"
                   HorizontalOptions="Start" 
                   Margin="0,0,0,5"/>
        
            <Frame BorderColor="Gray" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" Padding="5" ColumnDefinitions="50,60,60,60,100,100,60,60" BackgroundColor="LightGray">
                        <Label Text="ID" FontAttributes="Bold" Grid.Column="0" />
                        <Label Text="Member" FontAttributes="Bold" Grid.Column="1" />
                        <Label Text="Book" FontAttributes="Bold" Grid.Column="2" />
                        <Label Text="Staff" FontAttributes="Bold" Grid.Column="3" />
                        <Label Text="Loan Date" FontAttributes="Bold" Grid.Column="4" />
                        <Label Text="Due Date" FontAttributes="Bold" Grid.Column="5" />
                        <Label Text="Paid" FontAttributes="Bold" Grid.Column="6" />
                        <Label Text="Overdue" FontAttributes="Bold" Grid.Column="7" />
                    </Grid>
                    
                    <!-- List -->
                    <ListView x:Name="LoansListView" 
                              Grid.Row="1"
                              HasUnevenRows="True" 
                              SeparatorVisibility="Default"
                              SelectionMode="None"
                              Header="">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Loan">
                                <ViewCell>
                                    <Grid Padding="5" ColumnDefinitions="50,60,60,60,100,100,60,60">
                                        <Label Text="{Binding LoanId}" Grid.Column="0" />
                                        <Label Text="{Binding MemberId}" Grid.Column="1" HorizontalOptions="Center" />
                                        <Label Text="{Binding BookId}" Grid.Column="2" HorizontalOptions="Center" />
                                        <Label Text="{Binding EmployeeId}" Grid.Column="3" HorizontalOptions="Center" />
                                        <Label Text="{Binding LoanDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Column="4" HorizontalOptions="Center" />
                                        <Label Text="{Binding DueDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Column="5" HorizontalOptions="Center" />
                                        <Label Text="{Binding IsPaidText}" Grid.Column="6" HorizontalOptions="Center" />
                                        <Label Text="{Binding IsOverdueText}" Grid.Column="7" HorizontalOptions="Center" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Frame>

            <Button Text="Refresh Data" 
                    Clicked="OnRefreshClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>

            <Button Text="Test Connection" 
                    Clicked="OnTestConnectionClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>
            
            <Button Text="Logout" 
                Clicked="OnLogoutClicked"
                BackgroundColor="#FF5252"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
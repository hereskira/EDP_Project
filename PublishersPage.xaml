<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EDP_Project.PublishersPage"
             Title="Publishers">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Library Management System"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Authors" Clicked="OnAuthorsClicked" />
                    <Button Text="Books" Clicked="OnBooksClicked" />
                    <Button Text="Categories" Clicked="OnCategoriesClicked" />
                    <Button Text="Employees" Clicked="OnEmployeesClicked" />
                    <Button Text="Loans" Clicked="OnLoansClicked" />
                    <Button Text="Members" Clicked="OnMembersClicked" />
                    <Button Text="Publishers" Clicked="OnPublishersClicked" />
                </HorizontalStackLayout>

            <!-- Add page-specific content here -->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
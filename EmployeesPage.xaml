<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EDP_Project.Models"
             x:Class="EDP_Project.EmployeesPage"
             Title="Employees">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Library Management System"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Authors" Clicked="OnAuthorsClicked" />
                <Button Text="Books" Clicked="OnBooksClicked" />
                <Button Text="Categories" Clicked="OnCategoriesClicked" />
                <Button Text="Employees" Clicked="OnEmployeesClicked" />
                <Button Text="Loans" Clicked="OnLoansClicked" />
                <Button Text="Members" Clicked="OnMembersClicked" />
                <Button Text="Publishers" Clicked="OnPublishersClicked" />
            </HorizontalStackLayout>

            <Label Text="Employees List" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   Margin="0,20,0,10"/>
            
            <Label x:Name="EmployeeCountLabel" 
                   Text="Employees: 0" 
                   FontSize="16"
                   HorizontalOptions="Start" 
                   Margin="0,0,0,5"/>
        
            <Frame BorderColor="Gray" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" Padding="5" ColumnDefinitions="50,*,*,*,120" BackgroundColor="LightGray">
                        <Label Text="ID" FontAttributes="Bold" Grid.Column="0" />
                        <Label Text="First Name" FontAttributes="Bold" Grid.Column="1" />
                        <Label Text="Last Name" FontAttributes="Bold" Grid.Column="2" />
                        <Label Text="Role" FontAttributes="Bold" Grid.Column="3" />
                        <Label Text="Hire Date" FontAttributes="Bold" Grid.Column="4" />
                    </Grid>
                    
                    <!-- List -->
                    <ListView x:Name="EmployeesListView" 
                              Grid.Row="1"
                              HasUnevenRows="True" 
                              SeparatorVisibility="Default"
                              SelectionMode="None"
                              Header="">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Employee">
                                <ViewCell>
                                    <Grid Padding="5" ColumnDefinitions="50,*,*,*,120">
                                        <Label Text="{Binding EmployeeId}" Grid.Column="0" />
                                        <Label Text="{Binding FirstName}" Grid.Column="1" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding LastName}" Grid.Column="2" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Role}" Grid.Column="3" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding HireDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Column="4" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Frame>

            <Button Text="Refresh Data" 
                    Clicked="OnRefreshClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>

            <Button Text="Test Connection" 
                    Clicked="OnTestConnectionClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EDP_Project.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="150"
                Aspect="AspectFit"
                SemanticProperties.Description="Library Bot logo" />

            <Label
                Text="Library Management System"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Manage your books, track users, and more"
                FontSize="16"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2" />

            <Button
                Text="Log In"
                SemanticProperties.Hint="Tap to log in to your account"
                Clicked="OnLoginClicked"
                BackgroundColor="#0078D7"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                HorizontalOptions="Fill" />

            <Button
                Text="Register"
                SemanticProperties.Hint="Tap to create a new account"
                Clicked="OnRegisterClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
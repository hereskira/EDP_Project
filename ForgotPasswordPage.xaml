<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EDP_Project.ForgotPasswordPage"
             Title="Password Recovery"
             BackgroundColor="#f5f5f5">
             
    <Grid Padding="30" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Password Recovery" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
                   
            <Label x:Name="StepInfoLabel" 
                   Text="Please enter your email address to recover your account"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
        
        <!-- Email Step -->
        <Frame Grid.Row="1"
               x:Name="EmailFrame"
               Padding="20"
               BorderColor="#e0e0e0"
               HasShadow="True"
               CornerRadius="10"
               IsVisible="True">
            <VerticalStackLayout Spacing="15">
                <Entry x:Name="EmailEntry" 
                       Placeholder="Enter your email address" 
                       Keyboard="Email" />
                       
                <Button Text="Continue"
                        x:Name="VerifyEmailButton"
                        Clicked="OnVerifyEmailClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
                        
                <Button Text="Back to Login"
                        Clicked="OnBackToLoginClicked"
                        BackgroundColor="Transparent"
                        TextColor="#2196F3" />
                        
                <ActivityIndicator x:Name="EmailLoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   HorizontalOptions="Center" />
                                   
                <Label x:Name="EmailErrorMessage"
                       TextColor="Red"
                       HorizontalOptions="Center"
                       IsVisible="False" />
            </VerticalStackLayout>
        </Frame>
        
        <!-- Security Question Step -->
        <Frame Grid.Row="1"
               x:Name="SecurityFrame"
               Padding="20"
               BorderColor="#e0e0e0"
               HasShadow="True"
               CornerRadius="10"
               IsVisible="False">
            <VerticalStackLayout Spacing="15">
                <Label x:Name="SecurityQuestionLabel" 
                       Text="Security Question" 
                       FontSize="16" />
                       
                <Entry x:Name="SecurityAnswerEntry" 
                       Placeholder="Enter your answer" />
                       
                <Button Text="Verify"
                        x:Name="VerifyAnswerButton"
                        Clicked="OnVerifyAnswerClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
                        
                <Button Text="Back"
                        Clicked="OnBackToEmailClicked"
                        BackgroundColor="Transparent"
                        TextColor="#2196F3" />
                        
                <ActivityIndicator x:Name="SecurityLoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   HorizontalOptions="Center" />
                                   
                <Label x:Name="SecurityErrorMessage"
                       TextColor="Red"
                       HorizontalOptions="Center"
                       IsVisible="False" />
            </VerticalStackLayout>
        </Frame>
        
        <!-- New Password Step -->
        <Frame Grid.Row="1"
               x:Name="NewPasswordFrame"
               Padding="20"
               BorderColor="#e0e0e0"
               HasShadow="True"
               CornerRadius="10"
               IsVisible="False">
            <VerticalStackLayout Spacing="15">
                <Entry x:Name="NewPasswordEntry" 
                       Placeholder="Enter new password" 
                       IsPassword="True" />
                       
                <Entry x:Name="ConfirmPasswordEntry" 
                       Placeholder="Confirm new password" 
                       IsPassword="True" />
                       
                <Button Text="Reset Password"
                        x:Name="ResetPasswordButton"
                        Clicked="OnResetPasswordClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
                        
                <ActivityIndicator x:Name="PasswordLoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   HorizontalOptions="Center" />
                                   
                <Label x:Name="PasswordErrorMessage"
                       TextColor="Red"
                       HorizontalOptions="Center"
                       IsVisible="False" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
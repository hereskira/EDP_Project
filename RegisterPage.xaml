<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EDP_Project.RegisterPage"
             Title="Register">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Register Page" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Username" />
        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Entry Placeholder="Confirm Password" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterConfirmed" />
    </VerticalStackLayout>

</ContentPage>